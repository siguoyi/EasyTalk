<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/message_details_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/message_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon" />

        <RelativeLayout
            android:id="@+id/RelativeLayout2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >
			
            <TextView
                android:id="@+id/message_user_text"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="left|center_vertical"
                android:text="hdsajkcfskjabk" />

             <TextView
                 android:id="@+id/message_time"
                 android:layout_width="100dp"
                 android:layout_height="45dp"
                 android:layout_toRightOf="@id/message_user_text"
                 android:gravity="center|center_vertical"
                 android:text="vgjl;mf" />

            <TextView
                android:id="@+id/message_details_text"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/message_user_text"
                android:gravity="left|center_vertical"
                android:text="shjkhkhkdhkdksllldllljlsjkln" />

        </RelativeLayout>
    
    </LinearLayout>

</RelativeLayout>
